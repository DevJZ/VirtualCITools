pipeline
{
	agent any
	stages 
	{
		stage('build source') 
		{
			environment
			{
				USERNAME = credentials('dtr_id')
				PASSWORD = credentials('dtr_password')
				IMAGE_NAME = 'net4xbuilder'
			}
			steps 
			{
				script
				{
					def output = powershell(returnStdout: true, script: 'git -C ${PWD} log -1 --format="%h"')
					withEnv(['output=$output'])
					{
						echo "b:$output"
						powershell """Write-Output ${output}"""
					}
					
					def commithash = powershell(returnStdout: true, script: 'git -C ${PWD} log -1 --format="%h"')
					withEnv(['myhashcode=$commithash'])
					{
						powershell """if(( docker images -q ${IMAGE_NAME}) -ne $null ) 
								{$myhashcode=(git -C ${PWD} log -1 --format="%h"); 
								($machinename="mynet4builder_${myhashcode}");
								docker run --rm -d --name=${machinename} --env myusername=${USERNAME} --env mypassword=${PASSWORD} -t ${IMAGE_NAME};
								docker exec ${machinename} cmd /k 'set'
								docker stop ${machinename}} """
					}
				}
			}
		}
	}
}